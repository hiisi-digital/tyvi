{
  "name": "@hiisi/tyvi",
  "version": "0.1.0",
  "exports": "./mod.ts",
  "imports": {
    "@std/path": "jsr:@std/path@^1",
    "@std/fs": "jsr:@std/fs@^1",
    "@std/toml": "jsr:@std/toml@^1",
    "@std/fmt": "jsr:@std/fmt@^1",
    "@std/assert": "jsr:@std/assert@^1"
  },
  "tasks": {
    "test": "deno test --allow-read --allow-write --allow-run",
    "check": "deno check mod.ts",
    "cli": "deno run --allow-read --allow-write --allow-run src/cli/mod.ts"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": false
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true
  }
}
