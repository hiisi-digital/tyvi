{
  "name": "@hiisi/tyvi",
  "version": "0.1.0",
  "exports": "./mod.ts",
  "imports": {
    "@std/path": "jsr:@std/path@^1",
    "@std/fs": "jsr:@std/fs@^1",
    "@std/toml": "jsr:@std/toml@^1",
    "@std/fmt": "jsr:@std/fmt@^1",
    "@std/assert": "jsr:@std/assert@^1",
    "moo": "npm:moo@^0.5.2",
    "@hiisi/viola": "jsr:@hiisi/viola@^0.1.9",
    "@hiisi/viola-default-lints": "jsr:@hiisi/viola-default-lints@^0.1.3",
    "@hiisi/viola-grammar-ts": "jsr:@hiisi/viola-grammar-ts@^0.2.2"
  },
  "tasks": {
    "test": "deno test --allow-read --allow-write --allow-run",
    "check": "deno check mod.ts",
    "lint:viola": "deno run --allow-read --allow-write --allow-env --allow-run --allow-net jsr:@hiisi/viola-cli@^0.1.6"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    },
    "exclude": ["tests/fixtures/Library/"]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": false
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true
  }
}
