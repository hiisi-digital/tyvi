{
  "name": "@hiisi/tyvi",
  "version": "0.2.0",
  "exports": "./mod.ts",
  "publish": {
    "include": [
      "mod.ts",
      "src/**/*.ts",
      "schemas/**/*.json",
      "README.md",
      "LICENSE"
    ],
    "exclude": [
      "src/**/*_test.ts",
      "tests/**"
    ]
  },
  "imports": {
    "@std/path": "jsr:@std/path@^1",
    "@std/fs": "jsr:@std/fs@^1",
    "@std/toml": "jsr:@std/toml@^1",
    "@std/fmt": "jsr:@std/fmt@^1",
    "@std/assert": "jsr:@std/assert@^1",
    "moo": "npm:moo@^0.5.2",
    "@hiisi/viola": "jsr:@hiisi/viola@^0.3.0",
    "@hiisi/viola-default-lints": "jsr:@hiisi/viola-default-lints@^0.3.0",
    "@hiisi/viola-grammar-ts": "jsr:@hiisi/viola-grammar-ts@^0.3.0"
  },
  "tasks": {
    "test": "deno test --allow-read --allow-write --allow-run --allow-env",
    "check": "deno check mod.ts",
    "lint:viola": "deno run --allow-read --allow-write --allow-env --allow-run --allow-net jsr:@hiisi/viola-cli@^0.3.0"
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ]
    },
    "exclude": [
      "tests/fixtures/Library/"
    ]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": false
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true
  }
}
